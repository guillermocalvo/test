
#---------------------------------------------------------------------------
# Project related configuration options
#---------------------------------------------------------------------------

PROJECT_NAME           = "exceptions4c"
PROJECT_NUMBER         = "@EXCEPTIONS4C_VERSION@"
PROJECT_BRIEF          = "Exceptions for C"
PROJECT_LOGO           = @CMAKE_CURRENT_SOURCE_DIR@/docs/logo.svg
PROJECT_ICON           = @CMAKE_CURRENT_SOURCE_DIR@/docs/icon.svg
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/doxygen/
CREATE_SUBDIRS         = NO
ALWAYS_DETAILED_SEC    = YES
FULL_PATH_NAMES        = NO
JAVADOC_AUTOBRIEF      = YES
TYPEDEF_HIDES_STRUCT   = YES
OPTIMIZE_OUTPUT_FOR_C  = YES


#---------------------------------------------------------------------------
# Build related configuration options
#---------------------------------------------------------------------------

EXTRACT_ALL            = YES
HIDE_UNDOC_MEMBERS     = YES
HIDE_SCOPE_NAMES       = YES
HIDE_UNDOC_CLASSES     = YES
CASE_SENSE_NAMES       = NO
SORT_MEMBER_DOCS       = NO


#---------------------------------------------------------------------------
# Configuration options related to warning and progress messages
#---------------------------------------------------------------------------

WARN_NO_PARAMDOC       = YES
WARN_AS_ERROR          = NO


#---------------------------------------------------------------------------
# Configuration options related to the input files
#---------------------------------------------------------------------------

INPUT                  = @CMAKE_CURRENT_SOURCE_DIR@/src/ \
                         @CMAKE_CURRENT_SOURCE_DIR@/docs/README.md
FILE_PATTERNS          = *.c \
                         *.h \
                         *.md
IMAGE_PATH             = @CMAKE_CURRENT_SOURCE_DIR@/docs
USE_MDFILE_AS_MAINPAGE = @CMAKE_CURRENT_SOURCE_DIR@/docs/README.md


#---------------------------------------------------------------------------
# Configuration options related to source browsing
#---------------------------------------------------------------------------

VERBATIM_HEADERS       = NO


#---------------------------------------------------------------------------
# Configuration options related to the alphabetical class index
#---------------------------------------------------------------------------

ALPHABETICAL_INDEX     = NO


#---------------------------------------------------------------------------
# Configuration options related to the HTML output
#---------------------------------------------------------------------------

GENERATE_HTML          = YES
HTML_FOOTER            = @CMAKE_CURRENT_SOURCE_DIR@/docs/footer.html
DISABLE_INDEX          = NO
GENERATE_TREEVIEW      = YES
HTML_EXTRA_STYLESHEET  = @AWESOME_CSS_DIR@/doxygen-awesome.css \
                         @AWESOME_CSS_DIR@/doxygen-awesome-sidebar-only.css \
                         @CMAKE_CURRENT_SOURCE_DIR@/docs/exceptions4c.css


#---------------------------------------------------------------------------
# Configuration options related to the LaTeX output
#---------------------------------------------------------------------------

GENERATE_LATEX         = NO


#---------------------------------------------------------------------------
# Configuration options related to the RTF output
#---------------------------------------------------------------------------

GENERATE_RTF           = NO


#---------------------------------------------------------------------------
# Configuration options related to the man page output
#---------------------------------------------------------------------------

GENERATE_MAN           = NO


#---------------------------------------------------------------------------
# Configuration options related to the XML output
#---------------------------------------------------------------------------

GENERATE_XML           = NO


#---------------------------------------------------------------------------
# Configuration options related to the DOCBOOK output
#---------------------------------------------------------------------------

GENERATE_DOCBOOK       = NO


#---------------------------------------------------------------------------
# Configuration options for the AutoGen Definitions output
#---------------------------------------------------------------------------

GENERATE_AUTOGEN_DEF   = NO


#---------------------------------------------------------------------------
# Configuration options related to the Perl module output
#---------------------------------------------------------------------------

GENERATE_PERLMOD       = NO


#---------------------------------------------------------------------------
# Configuration options related to the preprocessor
#---------------------------------------------------------------------------

PREDEFINED             = __bool_true_false_are_defined
SKIP_FUNCTION_MACROS   = NO


#---------------------------------------------------------------------------
# Configuration options related to diagram generator tools
#---------------------------------------------------------------------------

HAVE_DOT               = NO
